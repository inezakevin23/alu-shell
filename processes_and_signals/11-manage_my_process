#!/usr/bin/env bash
# Bash init-style script to manage 'manage_my_process'

PID_FILE="/var/run/my_process.pid"
PROCESS="./manage_my_process"

start() {
    $PROCESS &
    echo $! > "$PID_FILE"
    echo "manage_my_process started"
}

stop() {
    if [ -f "$PID_FILE" ]; then
        PID=$(cat "$PID_FILE")
        kill "$PID" 2>/dev/null
        rm -f "$PID_FILE"
        echo "manage_my_process stopped"
    else
